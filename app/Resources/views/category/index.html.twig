{% extends 'AppBundle:Admin:admin.html.twig' %}

{% block stylesheets %}
    <style>table, th, td {
            border: 1px solid black;
            padding: 10px;
        }</style>
{% endblock %}
{% block body %}
    <h1>Categories list</h1>

    <table >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr >
                <td><a href="{{ path('admin_category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_category_show', { 'id': category.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_category_edit', { 'id': category.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_category_new') }}">Create a new category</a>
        </li>
    </ul>
{% endblock %}
